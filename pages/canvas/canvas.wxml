<!--index.wxml-->
<view class="container">
  <view>
    <canvas canvas-id="myCanvas"
      style="margin: 5px; border:1px solid #d3d3d3;"
      bindtouchstart="onCanvasStart"
      bindtouchmove="onCanvasMove"
      bindtouchend="onCanvasEnd"/>
    <view hidden="{{hidden}}">
      Coordinates: ({{x}}, {{y}})
    </view>
  </view>
</view>